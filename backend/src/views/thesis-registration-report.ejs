<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thesis Registration Report</title>
    <style>
        @page {
            size: A4;
            margin: 0;
        }
        
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            color: #333;
            font-size: 12pt;
        }
        
        .container {
            width: 100%;
            max-width: 210mm;
            min-height: 297mm;
            padding: 20mm 15mm;
            box-sizing: border-box;
        }
        
        .header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
            border-bottom: 2px solid #000;
            padding-bottom: 10px;
        }
        
        .university-info {
            display: flex;
            align-items: center;
        }
        
        .university-logo {
            width: 60px;
            height: 60px;
            margin-right: 15px;
        }
        
        .university-name {
            font-size: 16pt;
            font-weight: bold;
        }
        
        .document-info {
            text-align: right;
            font-size: 10pt;
        }
        
        .document-title {
            text-align: center;
            font-size: 24pt;
            font-weight: bold;
            margin: 30px 0;
            text-transform: uppercase;
        }
        
        .section {
            margin: 20px 0;
            padding: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        
        .section-title {
            font-size: 14pt;
            font-weight: bold;
            margin-bottom: 15px;
            border-bottom: 1px solid #ccc;
            padding-bottom: 5px;
        }
        
        .info-row {
            display: flex;
            margin-bottom: 10px;
        }
        
        .info-label {
            width: 180px;
            font-weight: bold;
        }
        
        .info-value {
            flex: 1;
        }
        
        .abstract {
            text-align: justify;
            line-height: 1.5;
            margin: 10px 0;
        }
        
        .keywords {
            font-style: italic;
        }
        
        .signatures {
            margin-top: 50px;
        }
        
        .signature-row {
            display: flex;
            justify-content: space-between;
            margin-top: 70px;
        }
        
        .signature-field {
            flex: 1;
            text-align: center;
            border-top: 1px solid #000;
            padding-top: 5px;
            margin: 0 20px;
        }
        
        .footer {
            text-align: center;
            margin-top: 50px;
            font-size: 10pt;
            color: #666;
            border-top: 1px solid #ccc;
            padding-top: 10px;
        }
        
        .page-number {
            text-align: right;
            font-size: 10pt;
            margin-top: 20px;
        }
        
        .status-approved {
            color: green;
            font-weight: bold;
        }
        
        .status-pending {
            color: #f90;
            font-weight: bold;
        }
        
        .status-rejected {
            color: red;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header Section -->
        <div class="header">
            <div class="university-info">
                <% if (data.university.logo) { %>
                    <img class="university-logo" src="<%= data.university.logo %>" alt="University Logo">
                <% } %>
                <div class="university-name"><%= data.university.name %></div>
            </div>
            <div class="document-info">
                <div>Semester: <%= data.document.semester %></div>
                <div>Department: <%= data.document.department %></div>
                <div>Date: <%= data.document.generatedAt.toLocaleDateString() %></div>
            </div>
        </div>

        <!-- Document Title -->
        <div class="document-title"><%= data.document.title %></div>

        <!-- Student Information Section -->
        <div class="section">
            <div class="section-title">1. Student Information</div>
            <div class="info-row">
                <div class="info-label">Full Name:</div>
                <div class="info-value"><%= data.student.fullName %></div>
            </div>
            <div class="info-row">
                <div class="info-label">Student ID:</div>
                <div class="info-value"><%= data.student.id %></div>
            </div>
            <div class="info-row">
                <div class="info-label">Major:</div>
                <div class="info-value"><%= data.student.major %></div>
            </div>
            <div class="info-row">
                <div class="info-label">Faculty:</div>
                <div class="info-value"><%= data.student.faculty %></div>
            </div>
            <div class="info-row">
                <div class="info-label">GPA:</div>
                <div class="info-value"><%= data.student.gpa.toFixed(2) %></div>
            </div>
            <div class="info-row">
                <div class="info-label">Accumulated Credits:</div>
                <div class="info-value"><%= data.student.accumulatedCredits %></div>
            </div>
        </div>

        <!-- Thesis Topic Section -->
        <div class="section">
            <div class="section-title">2. Thesis Topic</div>
            <div class="info-row">
                <div class="info-label">Thesis Title:</div>
                <div class="info-value"><%= data.thesis.title %></div>
            </div>
            <div class="info-row">
                <div class="info-label">Thesis Type:</div>
                <div class="info-value"><%= data.thesis.type %></div>
            </div>
            <div class="info-row">
                <div class="info-label">Abstract:</div>
                <div class="info-value"></div>
            </div>
            <div class="abstract">
                <%= data.thesis.abstract %>
            </div>
            <div class="info-row">
                <div class="info-label">Keywords:</div>
                <div class="info-value keywords"><%= data.thesis.keywords.join(', ') %></div>
            </div>
        </div>

        <!-- Supervisor Information Section -->
        <div class="section">
            <div class="section-title">3. Supervisor Information</div>
            <div class="info-row">
                <div class="info-label">Full Name:</div>
                <div class="info-value"><%= data.supervisor.fullName %></div>
            </div>
            <div class="info-row">
                <div class="info-label">Academic Title:</div>
                <div class="info-value"><%= data.supervisor.academicTitle %></div>
            </div>
            <div class="info-row">
                <div class="info-label">Department:</div>
                <div class="info-value"><%= data.supervisor.department %></div>
            </div>
            <div class="info-row">
                <div class="info-label">Email:</div>
                <div class="info-value"><%= data.supervisor.email %></div>
            </div>
        </div>

        <!-- Registration Details Section -->
        <div class="section">
            <div class="section-title">4. Registration Details</div>
            <div class="info-row">
                <div class="info-label">Registration Date:</div>
                <div class="info-value"><%= data.registration.date.toLocaleDateString() %></div>
            </div>
            <div class="info-row">
                <div class="info-label">Approval Status:</div>
                <div class="info-value">
                    <% if (data.registration.status === 'approved') { %>
                        <span class="status-approved">Approved</span>
                    <% } else if (data.registration.status === 'pending_approval') { %>
                        <span class="status-pending">Pending Approval</span>
                    <% } else { %>
                        <span class="status-rejected">Rejected</span>
                    <% } %>
                </div>
            </div>
            <% if (data.registration.notes) { %>
            <div class="info-row">
                <div class="info-label">Notes:</div>
                <div class="info-value"><%= data.registration.notes %></div>
            </div>
            <% } %>
        </div>

        <!-- Signature Section -->
        <div class="signatures">
            <div class="signature-row">
                <div class="signature-field">
                    Student's Signature
                </div>
                <div class="signature-field">
                    Supervisor's Signature
                </div>
                <div class="signature-field">
                    Department Head's Signature
                </div>
            </div>
        </div>

        <!-- Footer Section -->
        <div class="footer">
            <div><%= data.footer.universityContactInfo %></div>
            <div><%= data.footer.websiteUrl %></div>
            <div class="page-number">Page 1 of 1</div>
        </div>
    </div>
</body>
</html>